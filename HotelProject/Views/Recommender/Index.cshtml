@model HotelProject.Models.HotelPreferencesViewModel



<form asp-controller="Recommender" asp-action="ProcessHotelPreferences" class="form-container-recommender" method="post">
    <h1 style="padding-bottom:30px"> Tell us more about what you are looking for </h1>

    <div class="form-group-recommender">
        <label asp-for="City">City:</label>
        <input asp-for="City" class="form-control" />
    </div>

    <div class="form-group-recommender">
        <label asp-for="AccommodationType">AccommodationType:</label>
        <input asp-for="AccommodationType" class="form-control" />
    </div>

    <div class="form-group-recommender">
        <label asp-for="Price">Price:</label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="form-group-recommender">
        <label asp-for="DistanceToCenter">Distance to Center:</label>
        <input asp-for="DistanceToCenter" class="form-control" />
    </div>

    <div class="form-group-recommender">
        <label asp-for="DistanceToPOI">Distance to Points of Interest:</label>
        <input asp-for="DistanceToPOI" class="form-control" />
    </div>

    <div class="form-group-recommender">
        <label asp-for="Stars">Stars:</label>
        <input asp-for="Stars" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

